@model MySolution.Models.System.Users.ChangePasswordRequest

@{
    ViewData["Title"] = "ChangePassword";
}

@section Scripts{
    @{
        if(ViewBag.Result != null)
        {
            <script>alert('@Html.Raw(ViewBag.Result)')</script>
            ViewBag.Result = null;
        }
    }
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Cập nhật mật khẩu</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Trang chủ</a></li>
        <li class="breadcrumb-item active">Cập nhật thông tin</li>
    </ol>
    <div class="card mb-4">
        <div class="card-header">
            <a class="btn btn-success" asp-action="Index" asp-controller="User">Về danh sách người dùng</a>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="ChangePassword">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="UserName" />
                        <div class="form-group">
                            <label asp-for="CurrentPassword" class="control-label"></label>
                            <input type="password" asp-for="CurrentPassword" class="form-control" />
                            <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="NewPassword" class="control-label"></label>
                            <input type="password" asp-for="NewPassword" class="form-control" />
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Thay đổi" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>